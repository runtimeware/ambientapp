    x:Class="Ambient.AmbientPage"
    BackgroundImage="StayFrostyBackground.png"
    >

        <StackLayout>
    <Label  Text=" " 
                Font="Large"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand" />

                <Label  Text=" " 
                Font="Large"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                VerticalOptions="CenterAndExpand" />

        <Entry x:Name="username" Text="test" />
